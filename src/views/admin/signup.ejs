<!-- views/admin/registration.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Admin Signup</title>
</head>
<body>
    <h1>Admin Registration</h1>

    <form action="/admin/signup" method="POST">
        <!-- Add form fields for fullName, email, phone, password, and confirmPassword -->
    
        <input type="text" name="fullName" placeholder="Enter Full Name" required><br><br>

        <input type="email" name="email" placeholder="Enter Email" required><br><br>

        <input type="text" name="phone" placeholder="Enter Phone" required><br><br>

        <input type="password" name="password" placeholder="Enter Password" required><br><br>

        <input type="password" name="confirmPassword" placeholder="Re-Enter Password" required><br><br>

        <button type="submit">Register</button>   <br><br> 
       <a href="http://localhost:3000/admin/login"> Login</a>
    </form>
    <%
    if (msg) { %>
        <p><%= msg %></p>
      <% }
    %>
</body>
</html>

